<h2>Reset your Password</h2>

<%= error_messages_for :user %>
	<% form_tag do %>
	<p><label for="user_password">Enter your new password:</label><br>
	<%= password_field :user, :password %><p>
		<p><label for="user_password_confirmation">Enter your new password again:</label><br>
		<%= password_field :user, :password_confirmation %><p>
		<%= submit_tag "Submit" %>
<% end %> 
